{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Kernel
        {
            "label": "kernel_x86_64",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "kernel_x86_64",
            ],
            "group": {
                "kind": "build"
            }
        },

        // Tools
        {
            "label": "build all tools",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "tools_build",
            ],
            "group": {
                "kind": "build"
            }
        },

        // Applications
        {
            "label": "build all applications",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "apps_build"
            ],
            "group": {
                "kind": "build"
            }
        },


        // Test
        {
            "label": "all tests",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "test"
            ],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "library tests",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "libraries"
            ],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "tool tests",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "tools"
            ],
            "group": {
                "kind": "test"
            }
        },
    ],
    "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true,
        "revealProblems": "onProblem"
    },
    "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "autoDetect",
        "owner": "zig",
        "pattern": {
            "regexp": "^(.*?):(\\d+):(\\d+):.*?(error):?\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        },
    }
}