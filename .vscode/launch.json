{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "arch",
            "type": "pickString",
            "options": ["aarch64", "x86_64"],
            "default": "x86_64",
            "description": "Architecture that is being debugged."
        }
    ],
    "configurations": [
        {
            "name": "QEMU remote",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": ["target create ${workspaceFolder}/zig-out/${input:arch}/kernel"],
            "processCreateCommands": [
                "breakpoint set --name init.kernelInitStage1 --hardware --one-shot true",
                // "process handle SIGTRAP -p false -s false -n false", // this is nice for TCG but not good for KVM
                "settings set target.require-hardware-breakpoint true",
                "gdb-remote 1234"
            ]
        }
    ]
}