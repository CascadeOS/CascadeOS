{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "arch",
            "type": "pickString",
            "options": [
                "arm",
                "riscv",
                "x64"
            ],
            "default": "x64",
            "description": "Architecture that is being debugged."
        }
    ],
    "configurations": [
        { // Requires extension LLDB DAP (llvm-vs-code-extensions.lldb-dap)
            "name": "LLDB QEMU remote",
            "type": "lldb-dap",
            "request": "attach",
            "program": "${workspaceFolder}/zig-out/${input:arch}/kernel-dwarf",
            "attachCommands": ["gdb-remote 1234"],
            "presentation": {
                "hidden": false,
                "group": "QEMU remote",
                "order": 1
            }
        }
    ]
}