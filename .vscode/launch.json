{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "arch",
            "type": "pickString",
            "options": [
                "arm",
                "riscv",
                "x64"
            ],
            "default": "x64",
            "description": "Architecture that is being debugged."
        }
    ],
    "configurations": [
        { // Requires extension CodeLLDB (vadimcn.vscode-lldb)
            "name": "LLDB QEMU remote",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/zig-out/${input:arch}/kernel-dwarf",
            "processCreateCommands": [
                "gdb-remote 1234"
            ],
            "postRunCommands": [
                "continue" // prevent pausing in the bootloader/firmware
            ],
            "presentation": {
                "hidden": false,
                "group": "QEMU remote",
                "order": 1
            }
        }
    ]
}