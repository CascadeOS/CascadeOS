{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "arch",
            "type": "pickString",
            "options": [
                "arm",
                "riscv",
                "x64"
            ],
            "default": "x64",
            "description": "Architecture that is being debugged (only applicable for QEMU debugging)"
        }
    ],
    "configurations": [
        { // Requires extension CodeLLDB (vadimcn.vscode-lldb)
            "name": "LLDB QEMU remote",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/zig-out/${input:arch}/kernel-dwarf",
            "processCreateCommands": [
                "gdb-remote 1234"
            ],
            "postRunCommands": [
                "continue" // prevent pausing in the bootloader/firmware
            ],
            "presentation": {
                "hidden": false,
                "group": "QEMU remote",
                "order": 1
            }
        },
        {
            "name": "image_builder",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/tool/image_builder/image_builder",
            "args": [
                "image_description.json",
                "output.hdd"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "image_builder"
        },
    ]
}